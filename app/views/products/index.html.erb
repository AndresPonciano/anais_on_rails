<h1 class="title">Products Index</h1>

<section class="section">
    <div class="container">
        <% @products.each do |product| %>
            <div class="card">
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4"> <%= link_to product.title, product %> </p>
                        </div>
                    </div>

                    <div class="content">
                        <%= product.price %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</section>